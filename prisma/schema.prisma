generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Friend {
  id             String   @id @default(cuid())
  userId         String
  name           String
  addressRaw     String
  addressDisplay String?
  latitude       Float?
  longitude      Float?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([userId])
}

model PlaceCategory {
  id        String   @id @default(cuid())
  userId    String
  name      String
  places    Place[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, name])
  @@index([userId])
}

model Place {
  id             String         @id @default(cuid())
  userId         String
  name           String
  categoryId     String?
  category       PlaceCategory? @relation(fields: [categoryId], references: [id])
  addressRaw     String
  addressDisplay String?
  latitude       Float?
  longitude      Float?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  @@index([userId])
}
